{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crossoutdb-desktop",
  "version": "1.0.0",
  "identifier": "modern-byte.crossoutdb-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "https://crossoutdb.com",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CrossoutDB Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "url": "https://crossoutdb.com"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
